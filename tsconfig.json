{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": false,
    "target": "esnext",
    "noImplicitAny": false,
    "rootDir": "src",
    "outDir": "build",
    "strict": true,
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "babel.config.js",
    "node_modules",
    "build",
    "App.js"
  ]
}
